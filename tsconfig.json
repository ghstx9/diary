{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",             // required for path aliasing
    "paths": {
      "~/*": ["src/*"]          // allows `~/components/...` and `~/layouts/...`
    }
  }
}
